# OpenAgent Configuration
# Copy this file to .env and update the values

# Hugging Face Configuration
HUGGINGFACE_TOKEN=your_hf_token_here
DEFAULT_MODEL=tiny-llama
DEFAULT_DEVICE=auto
LOAD_IN_4BIT=true

# Agent Configuration
AGENT_NAME=TerminalAssistant
AGENT_DESCRIPTION="AI-powered terminal assistant with code generation capabilities"
MAX_ITERATIONS=10

# Server Configuration (for API mode)
HOST=localhost
PORT=8000
WORKERS=1
RELOAD=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/openagent.log

# Security Configuration
ENABLE_COMMAND_EXECUTION=true
ALLOWED_COMMANDS=ls,pwd,cat,grep,find,ps,df,free,git,pip,python,curl
DANGEROUS_COMMANDS=rm,rmdir,del,format,sudo,passwd,killall

# Model Cache
MODEL_CACHE_DIR=~/.cache/huggingface/transformers
DEVICE_MAP=auto

# Performance Settings
MAX_MEMORY_USAGE=8GB
QUANTIZATION=4bit
TEMPERATURE=0.7
MAX_LENGTH=2048
TOP_P=0.9
TOP_K=50
